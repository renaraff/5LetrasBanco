@model _5LetrasBanco.Models.Professor

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Professor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProfessorNome" class="control-label"></label>
                <input asp-for="ProfessorNome" class="form-control" />
                <span asp-validation-for="ProfessorNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorEmail" class="control-label"></label>
                <input asp-for="ProfessorEmail" class="form-control" />
                <span asp-validation-for="ProfessorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorSenha" class="control-label"></label>
                <input asp-for="ProfessorSenha" class="form-control" />
                <span asp-validation-for="ProfessorSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorGraduacao" class="control-label"></label>
                <input asp-for="ProfessorGraduacao" class="form-control" />
                <span asp-validation-for="ProfessorGraduacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorDescricao" class="control-label"></label>
                <input asp-for="ProfessorDescricao" class="form-control" />
                <span asp-validation-for="ProfessorDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfessorOcupacao" class="control-label"></label>
                <input asp-for="ProfessorOcupacao" class="form-control" />
                <span asp-validation-for="ProfessorOcupacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
