@model _5LetrasBanco.Models.Conteudo


@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Conteudo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProfessorId" class="control-label"></label>
                <select asp-for="ProfessorId" class="form-control" asp-items="ViewBag.ProfessorId"></select>
                <span asp-validation-for="ProfessorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MateriasId" class="control-label"></label>
                <select asp-for="MateriasId" class="form-control" asp-items="ViewBag.MateriasId"></select>
                <span asp-validation-for="MateriasId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConteudoTexto" class="control-label"></label>
                <input asp-for="ConteudoTexto" class="form-control" />
                <span asp-validation-for="ConteudoTexto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
