@model _5LetrasBanco.Models.Alunos

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar um novo:</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlunoNome" class="control-label"></label>
                <input asp-for="AlunoNome" class="form-control" />
                <span asp-validation-for="AlunoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoEmail" class="control-label"></label>
                <input asp-for="AlunoEmail" class="form-control" />
                <span asp-validation-for="AlunoEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoSenha" class="control-label"></label>
                <input asp-for="AlunoSenha" class="form-control" />
                <span asp-validation-for="AlunoSenha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoEscolaridade" class="control-label"></label>
                <input asp-for="AlunoEscolaridade" class="form-control" />
                <span asp-validation-for="AlunoEscolaridade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
